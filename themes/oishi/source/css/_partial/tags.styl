#tags 
  .tags-container 
    width 100%
    padding 50px 
    padding-top:25px
    margin-top 25px
    background-color #ffffff
    border-radius 5px
    box-shadow 0 2px 5px -2px rgba(0, 0, 0, 0.05)
    overflow hidden
    box-sizing border-box
  .tags 
    padding 25px 25px 20px
    border-bottom 1px solid rgba(178, 186, 194, 0.15)
  .tag-list 
    padding 20px 25px 15px
    border-bottom 1px solid rgba(178, 186, 194, 0.15)
    .listing-seperator 
      color #434343
      .tag-text 
        font-weight 550
        line-height 1.7
    .post-preview 
      margin-left 16px
      h2 
        &.post-title 
          color #404040
          transition 0.3s color
          &:hover 
            color #007fff
  .post-preview 
    position relative
    & > .post-meta 
      position absolute
      right 5px
      bottom 0px
      margin 0px
      font-size 12px
      line-height 12px
    & > a 
      .post-title 
        font-size 16px
        font-weight 500
        margin-top 20px
      .post-subtitle 
        font-size 12px
#tags .tags a,
  #tags .tags .tag 
  display inline-block
  padding 0 10px
  line-height 1.6em
  font-size 14px
  text-decoration none
  margin-bottom 6px
  cursor pointer
  border 1px solid #6e7173
  border-radius 20px
  color #404040
  font-weight 200
  transition 0.3s color
#tags .tags a:hover, #tags .tags a:active,
    #tags .tags .tag:hover,
    #tags .tags .tag:active 
  color white
  border-color #1B813E
  background-color #1B813E

